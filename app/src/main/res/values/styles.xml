<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="float_button_red" parent="Widget.Design.FloatingActionButton">

        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/main_grey_dk</item>
        <item name="colorControlActivated">#FF4081</item>
    </style>
    <style name="float_button_white" parent="Widget.Design.FloatingActionButton">

        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/main_grey_dk</item>
        <item name="colorControlActivated">#FF4081</item>
    </style>
</resources>
